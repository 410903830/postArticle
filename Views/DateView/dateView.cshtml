
@{
    ViewBag.Title = "dateView";
}

<p style="font-size:50px;text-align:center; ">每日簽到</p>
@{int[] list = ViewBag.product;
}




<style>

    .body-list {
        width: 80%;
        margin: auto auto auto auto;
    }

        .body-list li {
            width: 13%;
            height: 40px;
            background-color: aliceblue;
            display: inline-block;
            list-style-type: none;
            text-align: center;
            vertical-align: middle;
            padding-top: 1%;
        }

    .CheckIn {
        display: flex;
        justify-content: center;
        background-color: aquamarine;
        border-radius: 30px;
    }
</style>



<div class="body-list">
    <ul>
        <li>一</li>
        <li>二</li>
        <li>三</li>
        <li>四</li>
        <li>五</li>
        <li>六</li>
        <li>日</li>
    </ul>
</div>

<div class="body-list">
    <ul class="day" id="day">

        @{

            for (int i = 1; i < int.Parse(ViewBag.firstweekdate); i++)
            {
                <li></li>

            }

            for (int i = 1; i <= ViewBag.date; i++)
            {
                int value = i;
                if (Array.Exists(list, x => x == value))
                {
                    <li style="background-color:green;">@i</li>
                }
                else
                {
                    <li>@i</li>
                }


            }

        }


    </ul>
</div>





<!--button 簽到按鈕-->


<div>
    <input type="button" class="CheckIn" id="button" onclick="myfun()" value=@ViewBag.CheckIn>
</div>


<script>
    function myfun() {
        var btn_text = document.getElementById("button");
        switch (btn_text.value) {
            case "簽到":
                btn_text.value = "已簽到";
                alert("簽到成功");
                location.assign(location.href);
                break;
            case "已簽到":
                alert("您已簽到");
                break;
        }
    }
</script>




