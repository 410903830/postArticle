<!DOCTYPE html>
<html >
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 療癒之森</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
</head>
<body>
    <script>
        function makeAjaxRequest(redirectUrl, requestData)
        {
            $.ajax({
                url: redirectUrl,
                type: 'POST',
                data: requestData,
                success: function (result)
                {
                    // 更新部分內容
                    $('#PanelReload').html(result);
                }
            });
        }
    </script>
    <style>
        /* 自訂樣式 */
        .navbar {
            background-color: #76c296; /* 背景顏色 */
            box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1); /* 陰影效果 */
        }

        .navbar-brand {
            font-family: Arial, sans-serif; /* 字體 */
            font-size: 34px; /* 字體大小 */
        }

        .navbar-nav .nav-link {
            color: #333; /* 文字顏色 */
            font-size: 24px; /* 字體大小 */
        }

            .navbar-nav .nav-link:hover {
                color: #7785fc; /* 滑鼠懸停時的文字顏色 */
            }

        /* 選取項目樣式 */
        .navbar-nav .active > .nav-link {
            color: #7785fc; /* 選取項目的文字顏色 */
            font-weight: bold; /* 文字粗體 */
        }
    </style>

    <div id="PanelReload">
        <nav class="navbar navbar-expand-sm navbar-dark">
            <div class="container">
                @Html.ActionLink("療癒之森", "ArticleIndex", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="切換導覽" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            @Html.ActionLink("首頁", "ArticleIndex", "Home", new { area = "" }, new { @class = "nav-link" })
                        </li>
                        <!-- 其他導覽項目 -->
                    </ul>
                </div>
            </div>
        </nav>
        <div class="container body-content">

            @RenderBody()

            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - 我的 ASP.NET 應用程式</p>
            </footer>
        </div>
    </div>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
