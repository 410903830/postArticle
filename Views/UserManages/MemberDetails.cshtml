@model postArticle.viewmodel.MemberDetailsViewModel
@{
    ViewBag.Title = "會員資料";
    var usertype = "";

    var UQ = Model.UserQuestions;
    var EQA = Model.ExpertAS;

    var nowmood = Model.nowmood;

    var moodcount = ViewBag.happyCount + ViewBag.unhappyCount + ViewBag.sadCount + ViewBag.angryCount;


}
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>


<style>
    body {
        background-color: #DBF0D0;
    }
    
    a{
        text-decoration:none;
        font-size: 20px;
        color:#b2acac;
    }

    .container-panel {
        position: relative;
        display: flex;
        height: max-content;
        margin-top: 70px;
        margin-left: 2%;
        margin-bottom: 300px;
    }

    .window_content {
        position: relative;
        margin:auto;
        height: 300px;
        width: 900px;
        border-radius: 5px;
        background-color: #ffffff;
        margin-bottom: 70px;
    }

    .custom-btn {
        padding: 10px 10px; /* Padding for the button */
        border-radius: 5px; /* Rounded corners */
        width: 150px; /* 指定按钮的宽度 */
        transition: background-color 0.3s; /* 添加过渡效果 */
    }

        .custom-btn:hover {
            background-color: #97CD7D; /* 鼠标悬停时的背景颜色 */
        }

    .circle-avatar {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        background-size: cover; /* 保持图片比例并填充整个头像区域 */
        background-position: center; /* 将图片居中 */
        background-color: #d5f5c6;
    }

    .box {
        width: 40px;
        height: 35px;
        background-color: #c5e5b6;
        border-radius: 10px;
        overflow: hidden;
        position: absolute;
        margin-left: -130px;
        margin-top: 50px;
    }

        .box:hover {
            width: 180px;
            transition: 0.5s;
        }

    .mood {
        border: none;
        background-color: transparent;
        width: 30px;
        height: 30px;
    }

    .mood-preform {
        border: none;
        background-color: transparent;
        width: 30px;
        height: 30px;
    }

    #mood-font {
        font-size: 20px;
    }

    footer {
        display: none;
    }
    /************************************************/
    #experienceBar {
        max-width: 300px;
        width: 90%;
        height: 20px;
        border: 1px solid #000;
        position: relative;
    }


    #experienceFill {
        height: 100%;
        width: 0;
        background-color: #97CD7D; /* 綠色 */
        position: absolute;
    }

    #experienceText {
        text-align: center;
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        line-height: 20px;
        color: #000;
    }
    /****************************************************/

</style>


@switch (Model.UserManagesDetail.UserType)
{
    case "Member":
        usertype = "會員";
        break;

    case "Expert":
        usertype = "專家";
        break;

    case "Admin":
        usertype = "管理員";
        break;

    default:
        usertype = "Not Found";
        break;


}
